@model CcsData.ViewModels.ApplicantVm
@{
    ViewBag.Title = "RifiOption";
    Layout = "~/Views/Shared/_LayoutApp.cshtml";
}
<div class="col-md-5">
    @*<form class="form-wrapper" action="signup.htm" role="form">*@
    @using (Html.BeginForm("SelectedOption", "Mortgages1", FormMethod.Post, new { @class = "form-wrapper", role = "form" }))
    {
        <h4 class="title-divider"><span>Update Contact Info</span> <small>Please update and verify you info.</small></h4>


        <div class="form-group">
            @Html.LabelFor(model => model.FullName, new { @class = "" })
            @Html.TextBoxFor(model => model.FullName, new { @class = "form-control placeholder" })
            @Html.ValidationMessageFor(model => model.FullName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CellPhone, new { @class = "" })
            @Html.TextBoxFor(model => model.CellPhone, new { @class = "form-control placeholder" })
            @Html.ValidationMessageFor(model => model.CellPhone)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HomePhone, new { @class = "" })
            @Html.TextBoxFor(model => model.HomePhone, new { @class = "form-control placeholder" })
            @Html.ValidationMessageFor(model => model.HomePhone)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmailAddress, new { @class = "" })
            @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control placeholder" })
            @Html.ValidationMessageFor(model => model.EmailAddress)
        </div>

        <div class="form-group">
            <label class="" for="signup-password">Best Time To Call</label>
            @Html.TextBoxFor(model => model.CallBackTime, new { @class = "form-control placeholder" })
            @Html.ValidationMessageFor(model => model.CallBackTime)
        </div>


        <button class="btn btn-primary" type="submit">Continue</button>
    }
</div>


<div class="col-md-5 col-md-offset-2 ng-cloak" ng-controller="ccsMinApp">
    <div class="col-md-10 price-table {{option.Hilited}}">

        @*<h3><strong>$ {{option.LoanAmount | number:3 }}</strong></h3>*@
        <h3><strong>{{option.TermInYears}} Years at {{option.InterestRate | number:3}} %</strong></h3>
        <p>
            <strong>
                ${{option.NewMonthlyPaymentPrincipalInterest | number:2}}
            </strong>
            <span>PER MONTH</span>
            <span>{{option.APR | number:3}} % APR</span>
        </p>
        <ul>
            @*<li>{{option.InterestRate}} %   InterestRateSavings </li>*@
            <li>Payment Savings: $ {{option.MonthlySavings | number:2}}</li>
            <li>Interest Saved: $ {{option.NetSavingsFromOldLoanToNewLoan | number:2}}</li>
            <li>Reduced Rate by: {{option.InterestRateSavings | number:3}} %</li>
            <li>**Loan Amount: $ {{option.LoanAmount | number:2}}</li>
            <li>Months To Break Even: {{option.CostSavingsBreakEvenAnalysis | number:2}}</li>



            @*  <li>Maximum Interest Saving: {{option.AcceleratedPayoffTotalAmountOfAllPayments | number:2}}</li>*@


        </ul>

        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" ng-href="#collapse{{option.OptIntex}}">
                            Maximized Savings Plan
                        </a>
                    </h4>
                </div>
                <div id="{{'collapse' + option.OptIntex}}" class="panel-collapse collapse out">
                    <div class="panel-body">
                        <ul>
                            <li>Amount of New Payment + Monthly Savings: $ {{option.OldMonthlyPaymentPrincipalInterest | number:2}}</li>
                            <li>Payments remaining on old loan: {{option.MonthsPaidRemaining}}</li>
                            <li>Payments remaining on new Loan: {{option.NumberofPaymentstoMaturity}}</li>
                            <li>**Payments Eliminated: {{option.MonthlyPaymentsEliminated}}</li>
                            <li>**Maximum Interest Saves: $ {{option.TotalSavingsFromOldMortgageToNewMortgage | number:2}}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <a class="btn btn-success btn-lg" ng-click="optionSelected(i, $wij)">Select</a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/ccsApp.js")
    @Scripts.Render("~/Scripts/ccsMinAppController.js")
}
