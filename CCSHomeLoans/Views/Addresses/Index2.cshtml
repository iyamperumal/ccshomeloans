                    @Html.DisplayFor(modelItem => item.County)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipPlusZip4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CareOfName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarrierRoute)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsMailingAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsMailBox)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearsAtThisAddress)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Address_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Address_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Address_Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
