@model CcsWeb.Models.RegisterViewModel


<div id="loginSA" class="row">
    <div class="col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
        <div class="col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8">
            <section id="loginForm">
                @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {

                    @Html.AntiForgeryToken()
                    <h4><i class="fa fa-users"></i>New Members</h4>
                    <hr />
                    //Html.ValidationSummary("false", new { @class = "text-danger" })
                    @*<span class="form-group">
                            <i class="fa fa-user"></i>
                            @Html.TextBoxFor(m => m.UserName, new { @placeholder = "User Name" })
                        </span>*@
                    @*<div>
                            @Html.ValidationMessageFor(m => m.E, "", new { @class = "text-danger" })
                        </div>*@

                    <span class="form-group">
                        @*Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })*@
                        <i class="fa fa-envelope"></i>
                        @Html.TextBoxFor(m => m.EmailReg, new { @placeholder = "Email Address" })
                    </span>
                    <div>
                        @Html.ValidationMessageFor(m => m.EmailReg, "", new { @class = "text-danger" })
                    </div>

                    <span class="form-group">
                        @*Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })*@
                        <i class="fa fa-arrow-circle-o-right"></i>
                        @Html.TextBoxFor(m => m.FirstNameReg, new { @placeholder = "First Name" })
                    </span>
                    <div>
                        @Html.ValidationMessageFor(m => m.FirstNameReg, "", new { @class = "text-danger" })
                    </div>


                    <span class="form-group">
                        @*Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })*@
                        <i class="fa fa-arrow-circle-o-right"></i>
                        @Html.TextBoxFor(m => m.LastNameReg, new { @placeholder = "Lats Name" })
                    </span>
                    <div>
                        @Html.ValidationMessageFor(m => m.LastNameReg, "", new { @class = "text-danger" })
                    </div>


                    <span class="form-group">
                        @*Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                        <i class="fa fa-key"></i>
                        @Html.PasswordFor(m => m.PasswordReg, new { @placeholder = "Password" })
                    </span>
                    <div>
                        @Html.ValidationMessageFor(m => m.PasswordReg)
                    </div>
                    <span class="form-group">
                        @*Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                        <i class="fa fa-key"></i>
                        @Html.PasswordFor(m => m.ConfirmPasswordReg, new { @placeholder = "Confirm Password" })

                        @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                    </span>

                    <div>
                        @Html.ValidationMessageFor(m => m.ConfirmPasswordReg)
                    </div>
                    <span class="form-group">
                        <button type="submit" class="btn btn-default">Register</button>
                    </span>
                    <br />
                    <br />
                    <span>
                        @*Html.ActionLink("Register as a new user", "Register")*@
                        <a href="/Account/login">Already registered login here</a>
                        @*style="color: brown"*@
                    </span>

                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@
                }
            </section>
        </div>
    </div>

</div>
